<%#= render 'user_form' %>

<%= form_with(model: @user) do |f| %> 
  <div class="row mt-5">
    <div class="col-sm-4 text-center">
      <div class="kv-avatar">
        <div class="file-loading">
          <% if @user.profile_pic.present? %>
            <%= image_tag(@user.profile_pic, style: "width: 300px; height: 200px") %>
          <% else %>
            <%= image_tag('team/team-1.jpg', style:"width: 300px; height: 200px") %>
          <% end %>
          <%= f.file_field :profile_pic, class: "form-control" %> 
        </div>
      </div>      
    </div>
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= f.label :email, class: "form-label" %>
				    <%= f.email_field :email, class: "form-control" %> 
				    <%= @user.errors[:email] if @user.errors.any? %> 
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :first_name, class: "form-label" %>          
		        <%= f.text_field :first_name, class: "form-control" %>
		        <%= @user.errors[:first_name] if @user.errors.any? %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :last_name, class: "form-label" %>
		        <%= f.text_field :last_name, class: "form-control" %>
		        <%= @user.errors[:last_name] if @user.errors.any? %>
          </div>
        </div>
      </div>
      <div class="form-group">        
        <div class="text-right">
          <%= f.submit 'submit', class: "btn btn-primary btn-block mb-4 mt-4"%>
          <%= link_to 'Add Address', 
          						user_build_address_path(slug: @user.slug),
                      'data-remote': true,           						
          						class: "btn btn-primary btn-block mb-4 mt-4" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

